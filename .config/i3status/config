order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "battery all"
order += "time"


volume master {
    #format = '(%devicename): %volume'
    #mixer = 'Master'
    #device = 'pulse'
}

wireless _first_ {
    #format_up = 'W: (%quality at %essid, %bitrate / %frequency)'
    #format_down = 'W: down'
    #format_quality = '%03d%s'
}

battery all {
    #format = "%status %percentage %remaining"
    integer_battery_capacity = true
    #low_threshold = 15
    #threshold_type = percentage
}

time {
    format = "%d.%m.%Y %H:%M"
}

disk "/" {
    format = "/ %avail"
}

disk "/home" {
    format = "/home %avail"
}
