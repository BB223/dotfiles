configuration {
    modes: "window,drun,run";
    font: "JetBrainsMono Nerd Font Mono 15";
    location: 0;
    show-icons: true;
    disable-history: true;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "/usr/share/rofi/themes/Arc-Dark.rasi"

window {
    transparency: "real";
}
